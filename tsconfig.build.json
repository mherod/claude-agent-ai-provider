{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Enable declaration file generation
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",

    // Override base config for building
    "noEmit": false,
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,

    // Ensure compatibility
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022"],

    // Skip type checking of dependencies
    "skipLibCheck": true
  },
  "include": [
    "index.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "test",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
